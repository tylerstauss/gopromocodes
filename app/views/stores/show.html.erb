<% canonical(store_path(@store)) %>
<div class="row main-content">
	<div class="eight columns coupon-list">
		<div class="store-info">
			<% if is_admin? %>
				<p><%= link_to "Edit Store", edit_store_path(@store) %></p>
			<% end %>
			<h1><%= @store.name %> Promo Codes & Discounts</h1>
			<h2>There are currently <%= @store.promo_codes.count %> <%= @store.name %> Promotion Codes and <%= @store.name %> Coupons for <%= Date.today.strftime('%a, %d %b %Y') %></h2>
			<p class="store-description"><%= @store.description %></p>
		</div>
	
		<div class="red-banner">
			<h2>Current Codes</h2>
		</div>
		<% @promo_codes.each do |promo_code| %>
		<%= render partial: 'shared/single_coupon', locals: {promo_code: promo_code} %>
		<% end %>
		<% if @store.user_submit %>
			<div class="store-info">
				<p>Add A New Discount</p>
				<%= render partial: 'shared/user_submit', locals: {promo_code: @promo_code} %>
			</div>
		<% end %>
		<div class="red-banner">
			<h2>Learn more about how to save the most at <%= @store.name %> </h2>
		</div>
		<div class="store-blogs store-info">
			<% @blogs.each do |blog| %>
			<% if is_admin? %>
				<p><%= link_to "Edit Blog", edit_store_blog_path(blog) %></p>
			<% end %>
			<strong><%= blog.publish_date %></strong>
			<%= raw(blog.post) %>
			<br><br>
			<% end %>
		</div>
	</div>
	<div class="four columns right-side-bar">
		<%= render partial: 'shared/sidebar' %>
	</div>
</div>
