<%= form_for @promo_code, :remote => true do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title, :required => true %>
		
		<%= f.label :link %>
		<%= f.text_field :link, :required => true %>
	
		<%= f.label :description %>
		<%= f.text_area :description, :required => true %>
	
		<%= f.label :starts %>
		<%= f.date_select :starts %>
	
		<%= f.label :expires %>
		<%= f.date_select :expires %>
	
		<%= f.hidden_field(:user_submit, value: true) %>
		<%= f.hidden_field(:homepage, value: false) %>
		<%= f.hidden_field(:free_shipping, value: false) %>
		<%= f.hidden_field(:store_id, value: @store.id) %>
		<%= f.hidden_field(:approved, value: true) %>
		<%= recaptcha_tags %>
		<%= f.hidden_field(:approved, value: false) %>
	<%= f.submit "Add Code" %>
<% end %>
