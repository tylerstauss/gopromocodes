	<header>
		
		<div class="row">
			<div class="four columns">
			<span id="logo"><%= link_to image_tag("logo.png", :class => 'logo'), root_path %></span>
			</div>
				
			<div class="eight columns">
				<span id="header-login">
					<% if current_user %>
						<p>Welcome back <%= link_to current_user.username, user_path(current_user) %>!<br><%= link_to "Sign Out", signout_path %>
						<% if current_user.admin %>
							| <%= link_to "Admin", admin_path %>
						<% end %>
						</p>
					<% else %>
						<p>
							<%= link_to "Register", new_user_path %> /
							<%= link_to "Login", signin_path %>
						</p>
					<% end %>
				</span>
				<form id="search-bar" action="<%= search_path %>" method="get">
					<input type="text" placeholder="Search by store: Walmart" name="search_term">
					<input class="button-primary" type="submit" value="Search">
				</form>
				
			</div>
		</div>

		<div class="row" id="blue-banner">
			<div class="twelve columns">
				<h3>Use <span class="highlight">thousands</span> of free <span class="highlight">promo codes</span> and <span class="highlight">coupon codes</span> at GoPromoCodes.com for <span class="highlight">savings</span> when shopping online.</h3>
			</div>
		</div>
		<div class="row" id="top-menu">
			<div class="two columns menu-item"><%= link_to "Home", root_path %></div>
			<div class="three columns menu-item"><%= link_to "Blog", blog_path %></div>
			<div class="two columns menu-item"><%= link_to "All Stores", stores_path %></div>
			<div class="three columns menu-item"><%= link_to "All Categories", categories_path %></div>
			<div class="two columns menu-item"><%= link_to 'Newest Codes', new_codes_path %></div>
		</div>
		
	</header>