<% title("Free Online Promo Codes By Store") %>
<% meta_tag('keywords', "store, retailers, coupons, discounts, Promotional Codes, Promo Codes, Coupon Codes, Online Coupons") %>
<% meta_tag('description', "Find free promo codes and online discount codes by store!") %>
<% canonical(stores_path) %>
<div class="row main-content">
	<div class="red-banner"> 
		<h1>Blogs by Stores</h1>
	</div>

	<ul class="single-coupon">
		<% @store_blogs.each do |blog| %>
		<li><%= link_to(blog.store.name, store_path(blog.store))  %> | <%= link_to('edit', edit_store_blog_path(blog)) %></li>
		<li><%= raw(blog.post) %></li>
		<% end %>
	</ul>

</div>