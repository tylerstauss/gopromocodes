
<% title(@store.meta_title) %>
<% canonical(store_path(@store)) %>
<% meta_tag('keywords', @store.meta_keywords) %>
<% meta_tag('description', @store.meta_description) %>
<div class="row main-content">
	<div class="eight columns coupon-list">
		<div class="store-info">
			<% if is_admin? %>
				<p><%= link_to "Edit Store", edit_store_path(@store) %> | <%= link_to "Add new code", new_promo_code_path(store: @store.id) %></p>
			<% end %>
			<h1><%= @store.name %> Promo Codes & Discounts</h1>
			<h2>There are currently <%= @store.promo_codes.count %> <%= @store.name %> Promotion Codes and <%= @store.name %> Coupons for <%= Date.today.strftime('%a, %d %b %Y') %></h2>
			<p class="store-description"><%= @store.description %></p>
		</div>
	
		<div class="red-banner">
			<h2>Current Codes</h2>
		</div>
		<% @promo_codes.each do |promo_code| %>
		<%= render partial: 'shared/single_coupon_stores', locals: {promo_code: promo_code} %>
		<% end %>
		
		<% if @store.user_submit %>
			<div class="store-info">
				<p>
Do you have a promotion code for <%= @store.name %>?
Add your <%= @store.name %> promo code here for others' benefit.</p>
				<%= render partial: 'shared/user_submit', locals: {promo_code: @promo_code, store: @store} %>
				<p class='success'></p>
				<p class='error'></p>
				<p id="disclaimer">To signup for <%= @store.name %> coupon codes, please enter your email address in the Newsletter box on the right side of the page. 

The <%= @store.name %> promotional codes listed above are available because GoPromoCodes.com is an affiliate of <%= @store.name %>. Tyler Stauss manages this partnership. Meet <%= link_to "Tyler", "https://plus.google.com/u/0/114616733302009885635?rel=author" %>!
Since this site allows users to submit content, we cannot guarantee the accuracy of the content.</p>
			</div>
		<% end %>
		
		<div class="red-banner">
			<h2>Learn more about how to save the most at <%= @store.name %> </h2>
		</div>
		
		<div class="store-blogs store-info">
			<% @blogs.each do |blog| %>
			<% if is_admin? %>
				<p><%= link_to "Edit Blog", edit_store_blog_path(blog) %></p>
			<% end %>
			<strong><%= blog.publish_date %></strong>
			<%= raw(blog.post) %>
			<br><br>
			<% end %>
		</div>
	</div>
	<div class="four columns right-side-bar">
		<%= render partial: 'shared/sidebar' %>
	</div>
</div>
