<% title("Free Online Promo Codes By Store") %>
<% meta_tag('keywords', "store, retailers, coupons, discounts, Promotional Codes, Promo Codes, Coupon Codes, Online Coupons") %>
<% meta_tag('description', "Find free promo codes and online discount codes by store!") %>
<% canonical(stores_path) %>
<div class="row main-content">
	<div class="twelve columns">
	<div class="red-banner"> 
		<h1>All Stores</h1>
	</div>

		<table>
			<thead>
				<td>ID</td>
				<td>Name</td>
				<td>URL</td>
				<td>Domain</td>
			</thead>
			<% @stores.each do |store| %>
			<tr>
				<td><%= store.id %></td>
				<td><%= link_to store.name, edit_store_path(store) %></td>
				<td><%= store.url %></td>
				<td><%= store.domain %></td>
			</tr>
		
		<% end %>
			<tr>
			</tr>

		</table>
		
	<%= will_paginate @stores %>
	</div>

<!-- 		<div class="four columns right-side-bar">
			<%= render partial: 'shared/sidebar' %>
		</div> -->
</div>