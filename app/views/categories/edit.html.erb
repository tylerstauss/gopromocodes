<h1>Create New Category</h1>

<%= form_for(@category) do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

		<p>
		<%= f.label :slug %>
		<%= f.text_field :slug %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

		<p>
		<%= f.label :meta_title %>
		<%= f.text_area :meta_title %>
	</p>

		<p>
		<%= f.label :meta_description %>
		<%= f.text_area :meta_description %>
	</p>

		<p>
		<%= f.label :meta_keywords %>
		<%= f.text_area :meta_keywords %>
	</p>

	<%= f.submit %>
<% end %>