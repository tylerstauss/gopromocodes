<div class="row main-content">
	<div class="eight columns">
	<h1>Edit Promo Code</h1>
	<%= form_for(@promo_code) do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :link %>
		<%= f.text_field :link %>
	</p>

	<p>
		<%= f.label :code %>
		<%= f.text_field :code %>
	</p>

		<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :starts %>
		<%= f.date_select :starts %>
	</p>

		<p>
		<%= f.label :expires %>
		<%= f.date_select :expires %>
	</p>
	<p>
		<%= f.label :order_id %>
		<%= f.text_field :order_id %>
	</p>



	<p>
		<%= f.label :store %>
		<%= f.collection_select(:store_id, @stores, :id, :name) %>
	</p>

	<p>
		<%= f.label :approved %>
		<%= f.check_box(:approved, checked: @promo_code.approved) %>
	</p>

	<p>
		<%= f.label :user_submit %>
		<%= f.check_box(:user_submit, checked: @promo_code.user_submit) %>
	</p>


	<p>
		<%= f.label :free_shipping %>
		<%= f.check_box(:free_shipping, checked: @promo_code.free_shipping) %>
	</p>
	<p>
		<%= f.label :homepage %>
		<%= f.check_box(:homepage, checked: @promo_code.homepage) %>
	</p>

	<p>
		<%= f.label :category %>
		<ul>
		<% @categories.each do |category| %>
     <li> <%= check_box_tag "promo_code[category_ids][]", category.id, f.object.categories.include?(category) %>
      <%= category.name %></li>
    <% end %>
    </ul>
	</p>




	<%= f.submit %>
<% end %>
	</div>
	<div class="four columns right-side-bar">
	</div>
</div>