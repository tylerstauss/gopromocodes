<h1>Edit User</h1>

<%= form_for(@user) do |f| %>
	<p>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<% if is_admin? %>
		<p>
			<%= f.label :admin %>
			<%= f.check_box :admin, value: @user.admin %>
		</p>
	<% end %>
	<%= f.submit %>
<% end %>