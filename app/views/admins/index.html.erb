<div class="row main-content">
	<div class="eight columns">
		<div class="red-banner"> 
			<h1>Admin Panel</h1>
		</div>
		<ul>
				<li><%= link_to("Add New Coupon", new_promo_code_path) %></li>
				<li><%= link_to("Add New Store", new_store_path) %></li>
				<li><%= link_to("Add New Category", new_category_path) %></li>
				<li><%= link_to("Stores", admin_all_stores_path) %></li>
				<li><%= link_to("Users", users_path) %></li>
				<li><%= link_to("Approve Coupons", code_approval_path) %></li>
				<li><%= link_to("Store Blogs", store_blogs_path) %></li>
			</ul>

		<div class="site-info">
			<table class="merchant-stats"> 
					<tbody> 
						<tr> 
							<td>Total Stores: <span class="merchant-offer-data"><%= number_with_delimiter(@total_stores, :delimiter => ',') if @total_stores %></span>
							</td> 
							<td>Total Valid Offers: <span class="merchant-offer-data"><%= number_with_delimiter(@total_discounts, :delimiter => ',') if @total_discounts %></span>
							</td> 
						</tr> 
						<tr> 
							
						</tr> 
						<tr> 
							<td>Total Promo Codes: <span class="merchant-offer-data"><%= number_with_delimiter(@total_codes, :delimiter => ',') if @total_codes %></span>
							</td> 
							<td>Free Shipping Offers: <span class="merchant-offer-data">
								<%= number_with_delimiter(@total_free_shipping, :delimiter => ',') if @total_free_shipping %></span>
							</td>
						</tr> 
					</tbody>
				</table>
		</div>

	</div>
	<div class="four columns right-side-bar">
		<%= render partial: 'shared/sidebar' %>
	</div>
</div>